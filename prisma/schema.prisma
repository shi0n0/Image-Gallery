// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 画像情報を格納するテーブル
model Images {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  url         String   // 画像ファイルへのパスやURLを格納
}